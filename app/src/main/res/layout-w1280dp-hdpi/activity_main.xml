<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_android_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_get_gpio_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get GPIO Info"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_led_red_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Led Red"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_led_green_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Led Green"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_led_blue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Led Blue"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_bmp180_info_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="540dp"
            android:layout_marginTop="50dp"
            android:text="main_bmp180_info_text"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="This is Android Things Home B"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <com.xiaozi.framework.libs.view.NetworkInfoView
            android:id="@+id/main_network_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:text="000.000.000.000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <com.xiaozi.framework.libs.view.DevInfoView
            android:id="@+id/main_dev_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DevInfoView"
            android:textColor="#ff0000"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>